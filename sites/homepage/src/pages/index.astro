---
import BaseLayout from "../layouts/BaseLayout.astro";
import Button from "../components/Button/index.svelte";
import DisplayText from "../components/DisplayText.svelte";
const redirectUrl =
  "https://slack.com/oauth/v2/authorize?client_id=1648737748640.2152796719617&scope=channels:history,channels:read,groups:history,groups:read,im:history,im:read,mpim:history,mpim:read,channels:join&user_scope=";
