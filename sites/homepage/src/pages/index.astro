    target="__blank"
    href={redirectUrl}
    class="grid group h-96 self-center -m-12 text-center"
  >
    <DisplayText>
      <span class="block text-skin-base/60"
        ><span
          class="group-hover:text-skin-primary transition-colors duration-500"
          >Scale</span
        > Your</span
      >
      <span
        class="block bg-skin-inverted/20 group-hover:text-skin-base/60 group-hover:bg-skin-inverted/10 transition-colors duration-500"
        >Team's</span
      >
      <span
        class="block group-hover:text-skin-base/60 text-skin-primary transition-colors duration-500"
        >Brain Power</span
      >
    </DisplayText>
  </a>
</BaseLayout>
