---
import LefthoekLogo from "../components/LefthoekLogo.svelte"
const { class: extendClasses } = Astro.props;
---
<html lang="en" class="h-full max-h-screen">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>Lefthoek</title>
    <link rel="stylesheet" type="text/css" href={Astro.resolve("../styles/global.css")}>
  </head>


  <body class={`max-h-screen bg-gradient-to-r from-skin-base to-skin-tertiary ${extendClasses}`}>
    <a href="/">
      <LefthoekLogo isInverted={true} class="w-20 m-10"/>
    </a>
    <slot/>
  </body>
</html>
