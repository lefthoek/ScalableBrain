{
  "name": "@lefthoek/scalable-brain",
  "private": true,
  "version": "0.0.0",
  "description": "## Rationale",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ]
      },
      "lint": {},
      "dryrun": {
        "dependsOn": [
          "build"
        ]
      },
      "deploy": {
        "dependsOn": [
          "build"
        ]
      },
      "test": {}
    }
  },
  "scripts": {
    "prepare": "husky install",
    "codegen": "graphql-codegen --config codegen.yml",
    "docs": "docsify serve docs",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "deploy": "turbo run deploy",
    "dryrun": "turbo run deploy"
  },
  "author": "Jan Hein Hoogstad",
  "license": "MIT",
  "devDependencies": {
    "husky": "^7.0.4",
    "lehre": "^1.5.0",
    "turbo": "^1.0.24"
  },
  "workspaces": [
    "packages/config",
    "packages/graphql-schema",
    "packages/types",
    "packages/adapters",
    "packages/stores",
    "services/api",
    "services/mine",
    "services/refine",
    "sites/homepage"
  ]
}
