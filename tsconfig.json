{
  "compilerOptions": {
    "module": "commonjs",
    "skipLibCheck": true,
    "target": "es2019",
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true
  },
  "lib": ["es2018"]
}
